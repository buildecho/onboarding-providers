{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "lib": ["ES2019"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "files": [
        "src/index.ts"
    ]
}
